
<%= simple_form_for(@intervention) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :author %>
    <%= f.association :customer %>
    <%= f.association :building %>
    <%= f.association :battery %>
    <%= f.association :column %>
    <%= f.association :elevator %>
    <%= f.association :employee %>
    <%= f.input :start_date_and_time_of_the_intervention %>
    <%= f.input :end_date_and_time_of_the_intervention %>
    <%= f.input :result %>
    <%= f.input :report %>
    <%= f.input :status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
